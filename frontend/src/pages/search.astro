---
import Layout from "../layouts/Layout.astro";
import { apiFetch } from "../lib/api";
import { getAnimeImage } from "../lib/utils";
import { FaSearch, FaPlay } from "react-icons/fa";

export const prerender = false;

const q = Astro.url.searchParams.get("q") || "";
const type = Astro.url.searchParams.get("type") || "anime"; // Default search type
let results: any[] = [];
let error = "";

if (q) {
  try {
    const endpoint = type === "manga" ? "/manga/search" : "/anime/search";
    const res = await apiFetch<any>(`${endpoint}?q=${encodeURIComponent(q)}`);

    // Check if res.data exists
    if (res && res.data) {
      if (Array.isArray(res.data.animeList)) {
        results = res.data.animeList;
      } else if (Array.isArray(res.data)) {
        // Fallback/Legacy
        results = res.data;
      } else {
        results = []; // No valid list found
      }
    } else {
      results = [];
    }
  } catch (e: any) {
    error = "Failed to load search results.";
    console.error("Search Error Details:", e);

    if (e.cause) console.error("Cause:", e.cause);
    results = [];
  }
}
---

<Layout title="Cari Anime & Manga - TanyaAyomi">
  <!-- Back Button -->
  <div class="fixed top-4 left-4 z-50">
    <button
      onclick="history.length > 1 ? history.back() : window.location.href = '/'"
      class="w-10 h-10 md:w-12 md:h-12 flex items-center justify-center rounded-full bg-black/50 hover:bg-black/70 text-white border border-white/10 transition-all hover:scale-110 active:scale-95 backdrop-blur-sm"
      aria-label="Kembali"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2.5"
        stroke="currentColor"
        class="w-5 h-5 md:w-6 md:h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"></path>
      </svg>
    </button>
  </div>
  <div class="min-h-screen bg-zinc-950 pt-20 pb-24 px-4 md:px-12">
    {/* Search Input Section */}
    <div class="max-w-4xl mx-auto mb-12">
      <form action="/search" class="relative group">
        <div
          class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"
        >
          <FaSearch
            className="text-zinc-500 group-focus-within:text-white transition-colors text-lg"
          />
        </div>
        <input
          type="text"
          name="q"
          value={q}
          placeholder="Search for anime, manga, or characters..."
          class="w-full bg-zinc-900 text-white pl-12 pr-4 py-4 rounded-full border border-zinc-800 focus:outline-none focus:border-red-600 focus:ring-1 focus:ring-red-600 transition-all text-lg placeholder-zinc-600 shadow-xl"
          autofocus={!q}
        />
        {/* Hidden type input if we want to persist it, or UI toggles */}
        <input type="hidden" name="type" value={type} />

        <button
          type="submit"
          class="absolute inset-y-2 right-2 bg-red-600 hover:bg-red-700 text-white px-6 rounded-full font-bold transition-colors shadow-lg"
        >
          Search
        </button>
      </form>

      {/* Quick Filters (Optional) */}
      {
        !q && (
          <div class="mt-8">
            <h3 class="text-zinc-500 text-sm font-semibold mb-4 uppercase tracking-wider">
              Suggested Searches
            </h3>
            <div class="flex flex-wrap gap-3">
              {[
                "One Piece",
                "Naruto",
                "Solo Leveling",
                "Jujutsu Kaisen",
                "Attack on Titan",
              ].map((term) => (
                <a
                  href={`/search?q=${term}`}
                  class="bg-zinc-800 text-zinc-300 hover:bg-zinc-700 hover:text-white px-4 py-2 rounded-full text-sm transition-colors"
                >
                  {term}
                </a>
              ))}
            </div>
          </div>
        )
      }
    </div>

    {/* Search Results */}
    {
      q && (
        <div class="space-y-6">
          <div class="flex items-center justify-between border-b border-white/10 pb-4">
            <h2 class="text-xl md:text-2xl font-bold text-white">
              Results for <span class="text-red-500">"{q}"</span>
            </h2>
            <div class="flex gap-2 text-sm">
              <a
                href={`/search?q=${q}&type=anime`}
                class={`px-4 py-1.5 rounded-full transition-colors ${type !== "manga" ? "bg-white text-black font-bold" : "text-zinc-400 hover:text-white"}`}
              >
                Anime
              </a>
              <a
                href={`/search?q=${q}&type=manga`}
                class={`px-4 py-1.5 rounded-full transition-colors ${type === "manga" ? "bg-white text-black font-bold" : "text-zinc-400 hover:text-white"}`}
              >
                Manga
              </a>
            </div>
          </div>

          {error && (
            <div class="bg-red-500/10 border border-red-500/20 text-red-400 p-4 rounded text-center">
              {error}
            </div>
          )}

          {results.length === 0 && !error && (
            <div class="flex flex-col items-center justify-center py-20 text-zinc-500">
              <FaSearch className="text-6xl mb-4 opacity-20" />
              <p class="text-lg">No results found for "{q}"</p>
              <p class="text-sm">
                Try distinct keywords or check your spelling.
              </p>
            </div>
          )}

          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4 md:gap-6">
            {results.map((item) => (
              <a
                href={`/${type}/${item.slug || item.animeId}`}
                class="group relative aspect-[2/3] rounded-lg overflow-hidden bg-zinc-900 shadow-lg ring-1 ring-white/5 hover:ring-white/20 hover:scale-105 transition-all duration-300 transform"
              >
                <img
                  src={getAnimeImage(item)}
                  alt={item.title}
                  class="w-full h-full object-cover group-hover:opacity-40 transition-opacity"
                  loading="lazy"
                  onerror="this.onerror=null;this.src='https://placehold.co/200x300/222/999?text=No+Image';"
                />

                {/* Overlay Info */}
                <div class="absolute inset-0 flex flex-col justify-end p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                    <div class="w-10 h-10 bg-red-600 rounded-full flex items-center justify-center text-white shadow-lg mx-auto mb-3 scale-0 group-hover:scale-100 transition-transform delay-75">
                      <FaPlay className="pl-1" />
                    </div>
                    <h3 class="text-white font-bold text-center text-sm leading-tight line-clamp-2 drop-shadow-md">
                      {item.title}
                    </h3>
                    <p class="text-zinc-400 text-center text-xs mt-1">
                      {item.rating ? item.rating : "2024"}
                    </p>
                  </div>
                </div>

                {/* Badge */}
                <div class="absolute top-2 left-2 bg-zinc-900/90 backdrop-blur text-white text-[10px] font-bold px-2 py-0.5 rounded border border-white/10 uppercase">
                  {type}
                </div>
              </a>
            ))}
          </div>
        </div>
      )
    }
  </div>
</Layout>
