---
import Layout from "../../layouts/Layout.astro";
import { apiFetch } from "../../lib/api";
import { parseSynopsis, getAnimeImage } from "../../lib/utils";

export const prerender = false;

const { slug } = Astro.params;

let anime: any = null;
let error = "";

if (slug) {
  try {
    // Try Anime Indo API first for cleaner slugs
    // Clean slug from "-episode-X" to get parent anime slug (Fix for empty episode list on episode URLs)
    const cleanSlug = slug?.split("-episode-")[0] || slug;

    const animeIndoRes = await apiFetch<{ data: any }>(
      `/anime/detail-indo/${cleanSlug}`,
    );
    if (animeIndoRes && animeIndoRes.data) {
      const data = animeIndoRes.data;
      // Transform Anime Indo format to match existing format
      anime = {
        title: data.title,
        synopsis: data.synopsis,
        image: data.poster,
        genre: data.genres?.join(", ") || "",
        episodeList:
          data.episodes
            ?.map((ep: any) => ({
              episodeId: ep.eps_slug,
              slug: ep.eps_slug,
              eps: ep.eps_title?.match(/Episode\s+(\d+)/)?.[1] || "",
            }))
            .reverse() || [], // Reverse to show newest episodes first
        totalEpisodes: data.episodes?.length || 0,
        status: "Available",
        type: "TV Series",
      };
    }
  } catch (e) {
    // Fallback to Otakudesu/Sankavollerei if Anime Indo fails
    try {
      const res = await apiFetch<{ data: any }>(`/anime/${slug}`);
      anime = res.data;
    } catch (fallbackError) {
      error = "Gagal memuat detail anime.";
    }
  }
}

if (!anime) {
  return Astro.redirect("/404");
}

// Get first episode for "Watch Now" button
const firstEpisode = anime.episodeList?.[anime.episodeList.length - 1];
---

<Layout title={`${anime.title} - AnimePlay`} hideHeader={true}>
  <!-- Back Button -->
  <div class="fixed top-4 left-4 z-[100]">
    <button
      onclick="history.length > 1 ? history.back() : window.location.href = '/'"
      class="w-10 h-10 md:w-12 md:h-12 flex items-center justify-center rounded-full bg-black/50 hover:bg-black/70 text-white border border-white/10 transition-all hover:scale-110 active:scale-95 backdrop-blur-sm"
      aria-label="Kembali"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2.5"
        stroke="currentColor"
        class="w-5 h-5 md:w-6 md:h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"></path>
      </svg>
    </button>
  </div>

  <!-- Fixed Ambient Backdrop (Full Screen) -->
  <div
    class="fixed inset-0 w-full h-full z-0 pointer-events-none overflow-hidden"
  >
    <div class="absolute inset-0 bg-zinc-950/80 z-10"></div>
    <img
      src={getAnimeImage(anime)}
      alt="Ambient Background"
      class="w-full h-full object-cover blur-[50px] scale-125 opacity-50"
    />
  </div>

  <!-- Hero Section - DramaPlay Style -->
  <div class="relative z-10 pb-4 md:pb-8 pt-20 md:pt-28">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="flex gap-4 md:gap-8 items-start">
        <!-- Poster - Mobile Responsive -->
        <div class="w-32 sm:w-40 md:w-52 lg:w-64 flex-shrink-0">
          <img
            src={getAnimeImage(anime)}
            alt={anime.title}
            class="w-full rounded-lg shadow-2xl ring-1 ring-white/10 block"
            loading="eager"
          />
        </div>

        <!-- Info -->
        <div class="flex-1 space-y-3 md:space-y-4 pt-1 md:pt-4">
          <h1
            class="text-xl md:text-4xl lg:text-5xl font-black text-white leading-tight drop-shadow-lg"
          >
            {anime.title}
          </h1>

          <!-- Metadata badges -->
          <div
            class="flex flex-wrap items-center gap-2 md:gap-3 text-xs md:text-base"
          >
            <span
              class="px-2 py-0.5 rounded bg-white/10 text-white font-medium border border-white/10"
              >Anime</span
            >
            <span class="text-zinc-400">•</span>
            <span class="text-zinc-300">Likes</span>
            <span class="text-zinc-400">•</span>
            <span class="text-zinc-300"
              >{anime.totalEpisodes || anime.episodeList?.length || "?"} Eps</span
            >
          </div>

          <!-- Extended Metadata (Fills empty space on mobile) -->
          <div
            class="flex flex-col gap-1 mt-3 text-xs text-zinc-400 font-medium"
          >
            {
              anime.author && (
                <div class="flex items-center gap-2">
                  <span class="text-zinc-500 w-12">Author</span>
                  <span class="text-zinc-200 truncate">{anime.author}</span>
                </div>
              )
            }
            {
              anime.status && (
                <div class="flex items-center gap-2">
                  <span class="text-zinc-500 w-12">Status</span>
                  <span
                    class={`uppercase text-[10px] px-1.5 py-0.5 rounded border ${
                      anime.status.toLowerCase().includes("ongoing")
                        ? "bg-green-500/10 text-green-400 border-green-500/20"
                        : "bg-blue-500/10 text-blue-400 border-blue-500/20"
                    }`}
                  >
                    {anime.status}
                  </span>
                </div>
              )
            }
            {
              anime.type && (
                <div class="flex items-center gap-2">
                  <span class="text-zinc-500 w-12">Type</span>
                  <span class="text-zinc-200">{anime.type}</span>
                </div>
              )
            }
            {
              anime.genre && (
                <div class="flex items-center gap-2">
                  <span class="text-zinc-500 w-12">Genre</span>
                  <span class="text-zinc-200 truncate max-w-[150px]">
                    {anime.genre.split(",")[0]}
                  </span>
                </div>
              )
            }
            {
              anime.rating && (
                <div class="flex items-center gap-2">
                  <span class="text-zinc-500 w-12">Rating</span>
                  <span class="text-yellow-400 flex items-center gap-1">
                    <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    {anime.rating}
                  </span>
                </div>
              )
            }
          </div>

          <!-- Action Buttons - Desktop (Hidden on Mobile) -->
          <div class="hidden md:flex gap-3 pt-2">
            {
              firstEpisode && (
                <a
                  href={`/anime/watch/${firstEpisode.episodeId || firstEpisode.slug}`}
                  class="flex-1 md:flex-none flex items-center justify-center gap-2 bg-red-600 hover:bg-red-700 text-white px-5 py-2.5 md:px-8 md:py-3.5 rounded-full font-bold text-sm md:text-lg transition-all shadow-lg hover:shadow-red-600/20 hover:scale-105"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
                  </svg>
                  Watch Now
                </a>
              )
            }
            <button
              class="flex items-center justify-center gap-2 bg-white/10 hover:bg-white/20 text-white px-4 py-2.5 md:px-6 md:py-3.5 rounded-full font-bold text-sm md:text-lg transition-all backdrop-blur-sm border border-white/10"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
              </svg>
              My List
            </button>
          </div>
        </div>
      </div>

      <!-- Action Buttons - Mobile Only (Full Width Below) -->
      <div class="md:hidden grid grid-cols-2 gap-3 mt-6">
        {
          firstEpisode && (
            <a
              href={`/anime/watch/${firstEpisode.episodeId || firstEpisode.slug}`}
              class="flex items-center justify-center gap-2 bg-red-600 text-white px-4 py-3 rounded-xl font-bold text-base shadow-lg active:scale-95 transition-transform"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
              </svg>
              Watch Now
            </a>
          )
        }
        <button
          class="flex items-center justify-center gap-2 bg-white/10 text-white px-4 py-3 rounded-xl font-bold text-base backdrop-blur-sm border border-white/10 active:scale-95 transition-transform"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
          </svg>
          My List
        </button>
      </div>
    </div>
  </div>

  <!-- Synopsis - Static -->
  {
    anime.synopsis && (
      <div class="relative z-10 container mx-auto px-4 pb-8 max-w-6xl">
        <h2 class="text-lg md:text-xl font-bold text-white mb-2 opacity-90">
          Synopsis
        </h2>
        <p class="text-zinc-300 text-sm md:text-base leading-relaxed whitespace-pre-line max-w-4xl">
          {parseSynopsis(anime.synopsis)}
        </p>
      </div>
    )
  }

  <!-- Episodes Grid -->
  <div class="relative z-10 container mx-auto px-4 pb-12 max-w-6xl">
    <div
      class="flex items-center justify-between mb-4 md:mb-6 border-b border-white/10 pb-4"
    >
      <h2 class="text-xl md:text-2xl font-bold text-white">Episodes</h2>
      <span class="text-sm text-zinc-400">
        {anime.episodeList?.length || 0} Available
      </span>
    </div>

    <div class="grid grid-cols-5 md:grid-cols-6 lg:grid-cols-8 gap-2 md:gap-3">
      {
        anime.episodeList?.map((ep: any, idx: number) => {
          // Fix: Use explicit 'eps' or extract from slug/episodeId. Fallback to index logic ONLY if needed.
          const displayNum = ep.eps
            ? ep.eps
            : (ep.slug || ep.episodeId)?.match(/episode-(\d+)/)?.[1] ||
              anime.episodeList.length - idx;

          return (
            <a
              href={`/anime/watch/${ep.episodeId || ep.slug}`}
              class="aspect-square bg-white/5 hover:bg-white/10 border border-white/5 hover:border-white/20 rounded-md md:rounded-lg flex items-center justify-center text-zinc-300 hover:text-white font-bold text-sm md:text-lg transition-all group relative overflow-hidden"
            >
              <span class="group-hover:scale-110 transition-transform relative z-10">
                {displayNum}
              </span>
            </a>
          );
        })
      }
    </div>
  </div>
</Layout>
