---
interface Props {
  title: string;
  image: string;
  slug: string;
  type: "anime" | "manga";
}

const { title, image, slug, type } = Astro.props;
const href = `/${type}/${slug}`;
---

<a
  href={href}
  class="group block overflow-hidden rounded-xl bg-gray-800 hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
>
  <div class="aspect-[2/3] overflow-hidden">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
      loading="lazy"
    />
  </div>
  <div class="p-4">
    <h3
      class="line-clamp-2 text-sm font-semibold text-gray-100 group-hover:text-pink-400"
    >
      {title}
    </h3>
    <span
      class="mt-2 inline-block rounded bg-gray-700 px-2 py-0.5 text-xs text-gray-300 capitalize"
    >
      {type}
    </span>
  </div>
</a>
